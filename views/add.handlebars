<main>
	<h2>Add a card</h2>
	<p>Enter details:</p>
	<form method="POST" action="?">
		<label for="title">Title</label>
		<input id="title" type="text" name="title" maxlength="70" required>

		<label for="body">Tip</label>
		<textarea id="body" name="body" rows="4" cols="60" maxlength="240" required></textarea>

		<label for="tages">Tags</label>
		<input id="tags" type="text" name="tags" maxlength="40">

		<!-- Include author automatically if logged in -->
		<label for="author">Author</label>
		<input id="author" type="text" name="author" maxlength="20">

		<button type="submit">Submit</button>
	</form>

</main>
